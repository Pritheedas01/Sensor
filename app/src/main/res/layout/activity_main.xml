<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Accelometer"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Accelometer X Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/accelerate_x_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Accelometer Y Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/accelerate_y_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Accelometer Z Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/accelerate_z_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Gyrometer"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Gyrometer X Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/gyro_x_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Gyrometer Y Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/gyro_y_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:text="Gyrometer Z Value:"
            android:layout_height="40dp"></TextView>
        <TextView
            android:id="@+id/gyro_z_value"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:id="@+id/btn_start"
            android:text="START"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:id="@+id/btn_stop"
            android:text="STOP"></Button>

    </LinearLayout>

</LinearLayout>